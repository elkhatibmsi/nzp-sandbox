{#
/**
 * @file
 * Theme override to display a one-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 */
#}
{%
  set classes = [
    'layout',
    '1-col',
  ]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="container">
  <div class="row">

    <div {{ region_attributes.content.addClass('col-md-12') }}>
      {{ content.content }}
    </div>
  </div>
   </div>
  </div>
{% endif %}
 